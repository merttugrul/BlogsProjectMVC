@model APP.Models.BlogResponse

@{
    ViewData["Title"] = "Delete Blog";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this blog?</h4>
</div>

<div class="card">
    <div class="card-header">
        <h3>@Model.Title</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">Publish Date</dt>
            <dd class="col-sm-9">@Model.PublishDateF</dd>

            <dt class="col-sm-3">Rating</dt>
            <dd class="col-sm-9">@Model.RatingF</dd>

            <dt class="col-sm-3">Tags</dt>
            <dd class="col-sm-9">@Model.TagNames</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>